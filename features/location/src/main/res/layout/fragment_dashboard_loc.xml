<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="@dimen/dimen_16dp"
    app:strokeWidth="@dimen/dimen_0dp">

    <ViewFlipper
        android:id="@+id/flipper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:measureAllChildren="false">

        <include
            android:id="@+id/notFount"
            layout="@layout/layout_dashboard_loc_not_found" />

        <include
            android:id="@+id/loading"
            layout="@layout/layout_dashboard_loc_loading" />

        <include
            android:id="@+id/success"
            layout="@layout/layout_dashboard_loc" />

        <include
            android:id="@+id/error"
            layout="@layout/layout_dashboard_loc_error" />

    </ViewFlipper>

</com.google.android.material.card.MaterialCardView>